<Window x:Class="App2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:App2.ViewModels"
        mc:Ignorable="d"
        Title="Patienten-Messwerte" Height="Auto" SizeToContent="Height" Width="450">

    <Window.DataContext>
        <viewModels:MainViewModel />
    </Window.DataContext>

    <StackPanel Margin="15">
        <ItemsControl ItemsSource="{Binding Measurements}">
            <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,5">
                            <Label Content="{Binding Label}" />
                            <TextBox Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Text="{Binding ValidationMessage}"
                                       Foreground="Red"
                                       FontSize="10"
                                       Visibility="{Binding HasValidationError}"
                                       Margin="0,2,0,0" />
                        </StackPanel>
                    </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Button Content="_Verarbeiten und Speichern"
                Command="{Binding ProcessAndSaveCommand}"
                Margin="0,20,0,0"
                Padding="5"
                Height="30" />
    </StackPanel>
</Window>