<Window x:Class="App2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App2"
        xmlns:viewModels="clr-namespace:App2.ViewModels"
        mc:Ignorable="d"
        Title="Patienten-Messwerte" Height="250" Width="400">

    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>

    <StackPanel Margin="15">
        <Label Content="_Wert 1 (Fließkommazahl):"/>
        <TextBox Text="{Binding Value1, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:F3}}"/>

        <Label Content="_Wert 2 (Fließkommazahl):" Margin="0,10,0,0"/>
        <TextBox Text="{Binding Value2, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:F3}}"/>

        <Label Content="_Wert 3 (Ganzzahl):" Margin="0,10,0,0"/>
        <TextBox Text="{Binding Value3, UpdateSourceTrigger=PropertyChanged}"/>

        <Button Content="_Verarbeiten und Speichern" Command="{Binding ProcessAndSaveCommand}" Margin="0,20,0,0" Padding="5"/>
    </StackPanel>
</Window>